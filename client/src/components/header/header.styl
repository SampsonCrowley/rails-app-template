.Site-header
  position: sticky;
  background-color: #222;
  background-image: url('~assets/images/background.svg');
  background-position: 50%;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: 1000;
  transition: background-image 2s ease-in-out

  .header-content
    min-height: 500px
    min-height: 16rem
    padding: 20px
    color: white
    background-color: rgba(0,0,0,0.3)
    color: #eee
    padding-bottom: 8rem
    position: relative

    .header-link
      transform: scale(0.9)
      background: rgba(0,0,0,0.6)
      transition: transform 0.25s ease-in-out
      text-decoration: none
      padding: 0.5rem 1rem
      text-decoration: none
      color: rgba(255,255,255,0.7)
      display: inline-block
      border: 1px solid #eee
      white-space: nowrap;

      &:hover
        transform: scale(1)

    .header-menu
      label[for=nav-trigger]
        position:absolute
        right: 1rem
        top: 1rem
        bottom: 1rem
        height: 2rem
        width: 2rem
        height: 2rem
        cursor: pointer
        @media screen and (min-width: 768px)
          display: none
        span
          position:relative
          top: .85rem
          &,
          &:before,
          &:after
            width: 2rem
            height: .3rem
            background: rgba(255,255,255,.7)
            position: absolute
            display: block
            content: ''
            transition: all 500ms ease-in-out

          &:before
            top: -.8rem

          &:after
            bottom: -.8rem

      .navTrigger+label, .header-menu-wrapper
        &, *
          transition: all .5s

      .header-menu-wrapper
        display: flex
        flex-flow: column nowrap
        justify-content: flex-end
        align-items: center
        max-width: 0;
        overflow: hidden;
        width: 100%
        position: absolute;
        top: 4rem;
        left: 0;
        @media screen and (max-width: 767px)
          background: rgba(255,255,255,1)
          .header-link
            display: block;
            width: 100vw;
            background:none!important;
            color: #222!important;
            border: 0 solid #222
            border-top-width: 1px
            border-bottom-width: 1px
            height: auto;
            transform: scale(1)
            &:hover
              transform: scale(1.1)
        @media screen and (min-width: 768px)
          max-width: 100vw
          flex-flow: row nowrap
          width: 100%
          position: relative
          top: 0
          left: 0
          right: 0
          bottom: 0

      .nav-trigger
        position:absolute
        clip: rect(0, 0, 0, 0);
        right: 0;
        height: 0;
        width: 0;
        &:checked
          & ~ .header-menu-wrapper
            max-width: 100%
          &+label
            span
              background-color: transparent
              &:before,
              &:after
                background: rgba(97,218,251,.8)
                top: 0
                box-shadow: 0 0 7px 1px #efefef
                width: 2rem
              &:before
                transform: rotate(45deg)
              &:after
                transform: rotate(-45deg)
          @media screen and (max-width: 767px)
            & ~ .header-menu-wrapper
              z-index: 200

    .header-nav
      position: absolute
      display: table
      width: 100%
      max-width: 64rem
      top: unset
      bottom: 0
      left: 0
      right: 0
      margin-right: auto
      margin-left: auto
      background-color: rgba(0,0,0,0)

      transition: all 1s

      .header-logo
        width: 4rem
        height: 4rem
        .header-link
          background: rgba(0,0,0, 0)
          color: #fff
          padding: 0

      &.nav-stuck
        max-width: 100vw
        background-color: #222
        color: #eee

        .header-menu
          .header-link
            background-color: rgba(0,0,0,0)
            border-color: rgba(97,218,251,1)
            color: rgba(97,218,251,1)
          .header-link:hover
            background: rgba(97,218,251,0.8)
            color: #000
            border-color: #000

        .header-logo
          .header-link
            transform: scale(1.5)

      &.nav-unstuck

        .header-menu
          .header-link
            background: rgba(0,0,0, 1)
            color: #fff

        @media screen and (min-width: 768px)
          .header-logo
            .header-link
              visibility: hidden


      .header-logo
      .header-menu
        display: table-cell
        padding: 1rem
        vertical-align: middle



    .header-logo
      .header-link
        width: 100%
        border: none

    .top-logo
      display: none
      @media screen and (min-width: 768px)
        display: inline-block
        width: 100%
        height: 100%
        max-width: 150px
        max-height: 150px
        position: absolute
        left: 5px
        top: 5px
        .header-link
          padding: 0
          border: none
          background: none
          height: 100%
          width: 100%

@keyframes Site-logo-spin {
  from { transform: rotate(0deg) }
  to { transform: rotate(360deg) }
}
